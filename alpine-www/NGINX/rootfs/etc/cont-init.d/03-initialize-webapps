#!/bin/execlineb -P

foreground {
 if { s6-echo "[i] Check if webapps folder exists." }
 if -t { s6-test ! -d /usr/share/webapps }
 if { s6-mkdir /usr/share/webapps }
 if { s6-envuidgid nginx s6-chown -U -- /usr/share/webapps }
}

