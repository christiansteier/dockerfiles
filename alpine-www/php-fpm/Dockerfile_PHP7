FROM maxder/alpine-base:ARCHTAG
MAINTAINER Christian-Maxilian Steier

ARG GNU_LIBICONV_VERSION=1.14

RUN echo "http://nl.alpinelinux.org/alpine/edge/community/" >> /etc/apk/repositories \
 && BUILD_DEPS=" \
    tar \
    build-base \
    autoconf \
    automake \
    libtool \
    samba-dev \
    php7-dev" \
 && apk -U add \
	${BUILD_DEPS} \
        file \
        icu-libs@testing \
	php7-apcu \
	php7-bcmath \
	php7-bz2 \
        php7-cgi \
        php7-common \
        php7-ctype \
	php7-curl \
	php7-dom \
	php7-exif \
	php7-fpm \
	php7-ftp \
        php7-gd \
        php7-gettext \
        php7-gmp \
	php7-imap \
	php7-iconv \
	php7-intl \
        php7-json \
	php7-ldap \
	php7-mbstring \
        php7-mcrypt \
#        php7-memcached@testing \
	php7-mysqli \
	php7-opcache \
        php7-openssl \
        php7-odbc \
        php7-pcntl \
	php7-pdo_dblib \
	php7-pdo_odbc \
        php7-pdo_sqlite \
        php7-pdo_mysql \
        php7-pear \
        php7-phar \
        php7-posix \
        php7-redis@testing \
	php7-soap \
        php7-sqlite3 \
	php7-xml \
	php7-xmlreader \
	php7-xmlrpc \
        php7-zlib \
        php7-zip \
	curl

## PHP smbclient
RUN sed -i "$ s|\-n||g" /usr/bin/pecl && pecl install smbclient \
 && echo "extension=smbclient.so" > /etc/php7/conf.d/00_smbclient.ini

## libiconv
ADD http://ftp.gnu.org/pub/gnu/libiconv/libiconv-${GNU_LIBICONV_VERSION}.tar.gz /tmp/libiconv-${GNU_LIBICONV_VERSION}.tar.gz
ADD https://raw.githubusercontent.com/mxe/mxe/7e231efd245996b886b501dad780761205ecf376/src/libiconv-1-fixes.patch /tmp/libiconv-1-fixes.patch
ADD http://de1.php.net/get/php-7.0.15.tar.gz/from/this/mirror /tmp/php7.tar.gz
RUN cd /tmp \
 && tar xzf libiconv-${GNU_LIBICONV_VERSION}.tar.gz \
 && cd libiconv-${GNU_LIBICONV_VERSION} \
 && ./configure --prefix=/usr/local \
 && patch -p1 -u < /tmp/libiconv-1-fixes.patch \
 && make \
 && make install \
 && libtool --finish /usr/local/lib \
 && cd /tmp \
 && tar xzf php7.tar.gz \
 && cd /tmp/php-7.*/ext/iconv \
 && phpize7 \
 && ./configure --with-iconv=/usr/local --with-php-config=/usr/bin/php-config7 \
 && make \
 && cp modules/iconv.so /usr/lib/php7/modules \
 && echo "extension=iconv.so" > /etc/php7/conf.d/00_iconv.ini

## Small fixes
RUN ln -s /etc/php7 /etc/php \
 && ln -s /usr/bin/php7 /usr/bin/php \
 && ln -s /usr/sbin/php-fpm7 /usr/bin/php-fpm \
 && ln -s /usr/bin/php-cgi7 /usr/bin/php-cgi \
 && ln -s /usr/lib/php7 /usr/lib/php

## PHP config
RUN sed -i -e "s*short_open_tag = Off*short_open_tag = On*g" /etc/php/php.ini \
 && sed -i -e "s*;always_populate_raw_post_data = -1*always_populate_raw_post_data = -1*g" /etc/php/php.ini

RUN echo "apc.shm_size = 128M" >> /etc/php/conf.d/apcu.ini \
 && echo "apc.ttl=7200" >> /etc/php/conf.d/apcu.ini \
 && echo "apc.user_ttl=7200" >> /etc/php/conf.d/apcu.ini \
 && echo "apc.gc_ttl=3600" >> /etc/php/conf.d/apcu.ini
 
# Install composer global bin
RUN curl -sS https://getcomposer.org/installer | php \
 && mv composer.phar /usr/local/bin/composer

RUN apk del ${BUILD_DEPS} php7-pear php7-dev \
 && rm -rf /var/cache/apk/*  /usr/share/doc /usr/share/man/ /usr/share/info/* /var/cache/man/* /var/tmp \
 && touch /firstrun

COPY rootfs /
EXPOSE 9000
